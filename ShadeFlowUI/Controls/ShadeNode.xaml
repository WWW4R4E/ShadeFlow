<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ShadeFlow.Controls.ShadeNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShadeFlow.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ShadeFlow.Models"
    xmlns:tools="using:ShadeFlow.Views.Tools"
    mc:Ignorable="d"
    x:Name="ShadeNodeControl">
    <UserControl.Resources>
        <tools:PropertyTemplateSelector x:Key="PropertyTemplateSelector"
                                        StringTemplate="{StaticResource StringPropTemplate}"
                                        NumberTemplate="{StaticResource NumberPropTemplate}"
                                        BoolTemplate="{StaticResource BoolPropTemplate}" />

        <!-- String 模板 -->
        <DataTemplate x:Key="StringPropTemplate" x:DataType="models:Property">
            <Grid ColumnDefinitions="100,*" Margin="0,4">
                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                         Text="{x:Bind Value, Mode=TwoWay, Converter={StaticResource ObjectConverter}}"/>
            </Grid>
        </DataTemplate>

        <!-- Double/Int/Slider 模板 -->
        <DataTemplate x:Key="NumberPropTemplate" x:DataType="models:Property">
            <Grid ColumnDefinitions="100,*" Margin="0,4">
                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                <Slider Grid.Column="1"
                        Minimum="-10" Maximum="10"
                        Value="{x:Bind Value, Mode=TwoWay, Converter={StaticResource ObjectConverter}}"/>
            </Grid>
        </DataTemplate>

        <!-- Bool 模板 -->
        <DataTemplate x:Key="BoolPropTemplate" x:DataType="models:Property">
            <Grid ColumnDefinitions="100,*" Margin="0,4">
                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                <CheckBox Grid.Column="1"
                          IsChecked="{x:Bind Value, Mode=TwoWay, Converter={StaticResource ObjectConverter}}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Border Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefault}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="6">
        <StackPanel MinHeight="120" Padding="0,4">
            <Border x:Name="TitleBar"
                    Background="{ThemeResource ControlFillColorTransparentBrush}"
                    HorizontalAlignment="Stretch"
                    Padding="12,8"
                    ManipulationMode="TranslateInertia"
                    PointerPressed="TitleBar_PointerPressed"
                    PointerMoved="TitleBar_PointerMoved"
                    PointerReleased="TitleBar_PointerReleased">
                <TextBlock Text="{x:Bind Node.Title, Mode=OneWay}"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           FontSize="16"
                           HorizontalAlignment="Left"
                           FontWeight="SemiBold" />
            </Border>

            <Line Stroke="{ThemeResource DividerStrokeColorDefault}"
                  Margin="0,8"
                  X1="0" Y1="0"
                  X2="200" Y2="0"
                  StrokeThickness="1"/>

            <!-- 输入端口区 -->
            <ItemsControl x:Name="InputPortsControl"
                          ItemsSource="{x:Bind Node.InputPorts, Mode=OneWay}"
                          Margin="12,8,12,4">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:Port">
                        <Grid ColumnDefinitions="16,8,*">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     PointerPressed="InputPort_PointerPressed"
                                     PointerMoved="InputPort_PointerMoved"
                                     PointerReleased="InputPort_PointerReleased"
                                     Tag="{Binding}" />
                            <TextBlock Grid.Column="2" Text="{x:Bind Name}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 参数区 -->
            <ItemsControl ItemsSource="{x:Bind Node.Properties}"
                          ItemTemplateSelector="{StaticResource PropertyTemplateSelector}"
                          Margin="12,4"/>

            <!-- 输出端口区 -->
            <ItemsControl x:Name="OutputPortsControl"
                          ItemsSource="{x:Bind Node.OutputPorts, Mode=OneWay}"
                          Margin="12,4,12,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:Port">
                        <Grid ColumnDefinitions="*,8,16">
                            <TextBlock Text="{x:Bind Name}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Ellipse Width="12" Height="12"
                                     Fill="#FF5722" Grid.Column="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     PointerPressed="OutputPort_PointerPressed"
                                     PointerMoved="OutputPort_PointerMoved"
                                     PointerReleased="OutputPort_PointerReleased"
                                     Tag="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Border>
</UserControl>